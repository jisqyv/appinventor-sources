 (call-component-method 'TinyDB1 'StoreValue (*list-for-runtime* "_rendezvous_server" "rendezvous.appinventor.mit.edu")
 '( text any)
)

(set-and-coerce-property! 'postip 'Text "rendezvous.appinventor.mit.edu" 'text)

