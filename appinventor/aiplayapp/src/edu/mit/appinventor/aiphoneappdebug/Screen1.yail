(define-repl-form edu.mit.appinventor.aiphoneappdebug.Screen1 Screen1)
(require <com.google.youngandroid.runtime>)
(def (Setup)
(set-var! ipaddress  (call-component-method 'PhoneStatus1 'GetWifiIpAddress (*list-for-runtime*)
 '())
)

(set-and-coerce-property! 'iplabel 'Text (get-var ipaddress)
 'text)

(if (call-yail-primitive yail-not (*list-for-runtime* (call-component-method 'PhoneStatus1 'isConnected (*list-for-runtime*)
 '())
)
 '( boolean)
 "not")
 (begin (set-and-coerce-property! 'ConnectFailLabel 'Visible #t 'boolean)

)
 (begin (set-and-coerce-property! 'ConnectFailLabel 'Visible #f 'boolean)

)
)

 )
(def ipaddress "IPADDRESS")

(def (PostData)
(set-and-coerce-property! 'Web1 'Url ((get-var GetServer))
 'text)

(call-component-method 'Web1 'PostText (*list-for-runtime* (call-component-method 'Web1 'BuildPostData (*list-for-runtime* (call-yail-primitive make-yail-list (*list-for-runtime* (call-yail-primitive make-yail-list (*list-for-runtime* "key" (get-property 'code 'Text)
)
 '( any any)
 "make a list")
 (call-yail-primitive make-yail-list (*list-for-runtime* "ipaddr" (get-var ipaddress)
)
 '( any any)
 "make a list")
 (call-yail-primitive make-yail-list (*list-for-runtime* "port" "9997")
 '( any any)
 "make a list")
)
 '( any any any)
 "make a list")
)
 '( list)
)
)
 '( text)
)

(call-component-method 'code 'HideKeyboard (*list-for-runtime*)
 '())

 )
(def expired #f)

(def (badversion)
(set-var! expired  #t)

(set-and-coerce-property! 'Expireblock 'Visible #t 'boolean)

 )
(def (GetServer)
((get-var SetServer))

 (call-yail-primitive string-append (*list-for-runtime* "http://" (call-yail-primitive string-append (*list-for-runtime* (get-var Server)
 "/rendezvous/")
 '( text text)
 "join")
)
 '( text text)
 "join")
)
(def Server "")

(def (SetServer)
(set-var! Server  (call-component-method 'TinyDB1 'GetValue (*list-for-runtime* "_rendezvous_server")
 '( text)
)
)

(if (call-yail-primitive yail-equal? (*list-for-runtime* (get-var Server)
 "")
 '( any any)
 "=")
 (begin (set-var! Server  "rendezvous.appinventor.mit.edu")

)
)

 )
;;; Screen1
(do-after-form-creation (set-and-coerce-property! 'Screen1 'Title "App Inventor Instant App Companion" 'text)
(set-and-coerce-property! 'Screen1 'VersionCode 8 'number)
(set-and-coerce-property! 'Screen1 'VersionName "1.7" 'text)
)
(define-event Screen1 Initialize()
 (set-this-form)
 ((get-var Setup))

)
;;; HorizontalArrangement2
(add-component Screen1 HorizontalArrangement HorizontalArrangement2 )
;;; Label1
(add-component HorizontalArrangement2 Label Label1 (set-and-coerce-property! 'Label1 'Text "Your IP Address: " 'text)
)
;;; iplabel
(add-component HorizontalArrangement2 Label iplabel (set-and-coerce-property! 'iplabel 'Text "IP ADDRESS" 'text)
)
;;; Label2
(add-component Screen1 Label Label2 (set-and-coerce-property! 'Label2 'Text "Enter Displayed Code" 'text)
)
;;; HorizontalArrangement1
(add-component Screen1 HorizontalArrangement HorizontalArrangement1 )
